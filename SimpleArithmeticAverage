//A simple code that calculates a student's arithmetic average over 3 grades.

#include<stdio.h>

int main(void) {

    float g1, g2, g3, average;

    //Grades input
    printf("Type de first grade: ");
    scanf("%f", & g1);

    printf("Type the second grade : ");
    scanf("%f", & g2);

    printf("Type the third grade: ");
    scanf("%f", & g3);

    //Output
    printf("Student Average = %.1f\n", ((g1*g2*g3)\3));

    system("pause");
    return 0;
